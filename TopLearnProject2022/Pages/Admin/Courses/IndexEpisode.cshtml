<div class="card-body">
    <div class="table-responsive" tabindex="1" style="overflow: hidden; outline: none;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">عنوان بخش</th>
                    <th scope="col">زمان بخش</th>
                    <th scope="col">رایگان</th>

                    <th scope="col">دستورات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var c in Model.CourseEpisodes)
                {

                    <tr>
                        <td>@c.EpisodeTitle</td>
                        <td>@c.EpisodeTime</td>
                        <td>
                            @if (c.IsFree)
                            {
                                <span class="bi bi-unlock-fill " style=" font-size: 1.25rem; color: green"> </span>
                                @*<span class="text-success">
                                        <i class="glyphicon glyphicon-ok"></i>
                                    </span>*@
                            }
                            else
                            {


                                <span id="boot-icon" class="bi bi-lock" style="font-size: 1.25rem; color: rgb(255, 0, 0);"></span>


                                @*<span class="text-danger">
                                        <i class="glyphicon glyphicon-remove"></i>
                                    </span> <span class="glyphicon glyphicon-remove   alert-danger">خیر</span>*@

                            }
                        </td>
                        <td>
                            <a href="/Admin/Courses/EditEpisode/@c.EpisodeId" style="color:aliceblue;" class="btn btn-warning">ویرایش</a>
                            <a href="" style="color:aliceblue;" class="btn btn-danger">حذف</a>

                        </td>
                    </tr>
                }



            </tbody>
        </table>

    </div>
</div>
