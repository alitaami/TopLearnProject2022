<div class="card-body">
    <div class="table-responsive" tabindex="1" style="overflow: hidden; outline: none;">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">عنوان کد</th>
                    <th scope="col">درصد تخفیف</th>
                    <th scope="col">تعداد دفعات مجاز</th>
                    <th scope="col">تاریخ شروع</th>
                    <th scope="col">تاریخ پایان</th>
                    <th scope="col">دستورات</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var d in Model.discount.Where(d=>d.IsDelete==false)   )
                {

                <tr>
                    <td>@d.DiscountCode</td>
                    <td>@d.Percent</td>
                    <td>@d.UsableCount</td>
                    <td>@d.StartDate</td>
                    <td>@d.EndDate</td>

                    <td>
                       @* <a href="/Roles/EditRoles/@role.RoleId" style="color:aliceblue;" class="btn btn-warning">ویرایش</a>*@
                        <a href="/Admin/Discounts/DeleteDiscount/@d.DiscountId" style="color:aliceblue;" class="btn btn-danger">حذف</a>

                    </td>
                </tr>

                }

            </tbody>
        </table>

    </div>
</div>
