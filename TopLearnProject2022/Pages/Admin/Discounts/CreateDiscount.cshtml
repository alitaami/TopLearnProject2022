                            <input type="text" asp-for="discount.DiscountCode" class="form-control" id="discount_DiscountCode">



                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">درصد تخفیف</label>
                            <input type="number" asp-for="discount.Percent" class="form-control">

                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">تعداد دفعات مجاز</label>
                            <input type="number" asp-for="discount.UsableCount" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">تاریخ شروع</label>
                            <input type="date" asp-for="discount.StartDate" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">تاریخ پایان</label>
                            <input type="date" asp-for="discount.EndDate" class="form-control  ">
                            @*<input type="text" asp-for="discount.EndDate" class="form-control"  id="edDate"    >*@
                        </div>
                        <p class="help-block " style="color:darkred">mm:ماه dd:روز yyyy:شمسی   سال   </p>
                        <div class="row">
                            <button type="submit" class="btn btn-primary">ثبت</button>
                        </div>
                    </div>
                </div>

            </div>


        </div>
    </form>

